{
	"$schema": "https://raw.githubusercontent.com/Sapiens-OSS/hammerstone-framework/feature/data-driven-api/schemas/object.schema.json",
	"hammerstone:object_definition": {
		"description": {
			"identifier": "inca:lightsaber",
			"name": "Lightsaber",
			"plural": "Lightsabers",
			"scope": [
				"local base_damage = 10"
			]
		},
		"meta": {
			"author": "SirLich"
		},
		"components": {
			"hs_object": {
				"model": "lightsaber",
				"physics": true
			},
			"hs_resource": {
				"create_resource": true
			},
			"hs_decoration": {
				"enabled": true
			},
			"hs_storage_link": {
				"identifier": "inca:lightsaber_storage"
			},
			"hs_tool": {
				"tool_usage": [
					{
						"tool_type": "weaponKnife",
						"damage": "base_damage * 10"
					}
				]
			}
		}
	}
}